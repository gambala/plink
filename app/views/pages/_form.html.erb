<%= form_with(model: page) do |form| %>
  <% if page.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
        <% page.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "bg-gray-700 p-1 border border-yellow-400 rounded" %>
  </div>

  <div>
    <%= form.label :slug, style: "display: block" %>
    <%= form.text_field :slug, class: "bg-gray-700 p-1 border border-yellow-400 rounded" %>
  </div>

  <div>
    <%= form.label :text, style: "display: block" %>
    <%= form.text_area :text, class: "bg-gray-700 p-1 border border-yellow-400 rounded" %>
  </div>

  <div>
    <%= form.label :cover, style: "display: block" %>
    <%= form.file_field :cover, class: "bg-gray-700 p-1 border border-yellow-400 rounded" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
